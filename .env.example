BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN
DATABASE_URL="file:./db/bot.sqlite" # Example for SQLite, adjust for other DBs e.g. postgresql://user:password@host:port/database
# Optional: Provide a shared Gemini API key if not using per-user keys via UI
# SHARED_GEMINI_API_KEY=YOUR_GOOGLE_GEMINI_API_KEY

# Optional: For encrypting user-specific Gemini API keys in the database.
# ENCRYPTION_KEY should be a 64-character hex string (32 bytes).
# ENCRYPTION_IV should be a 32-character hex string (16 bytes).
# Generate these with a secure random generator, e.g., crypto.randomBytes(32).toString('hex') and crypto.randomBytes(16).toString('hex')
# ENCRYPTION_KEY=YOUR_64_CHARACTER_HEX_ENCRYPTION_KEY
# ENCRYPTION_IV=YOUR_32_CHARACTER_HEX_ENCRYPTION_IV
# API_KEY_ENCRYPTION_ENABLED=true # Set to "false" to disable encryption and store keys in plaintext (not recommended for production)
